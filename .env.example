# AI Opportunity Browser - Environment Configuration
# Copy this file to .env and update the values with your actual API keys and settings

# =================================================================
# APPLICATION SETTINGS
# =================================================================
APP_NAME="AI Opportunity Browser API"
VERSION="1.0.0"
ENVIRONMENT="development"  # Options: development, staging, production
DEBUG=true

# Server Configuration
HOST="0.0.0.0"
PORT=8000

# Security Configuration
SECRET_KEY="your-secret-key-change-in-production-make-it-long-and-random-minimum-32-characters"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration - Update with your frontend URLs
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://localhost:3004", "http://127.0.0.1:3004"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# PostgreSQL Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ai_opportunity_browser"
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Cache
REDIS_URL="redis://localhost:6379/0"
REDIS_EXPIRE_SECONDS=3600

# =================================================================
# REQUIRED API KEYS - Data Sources
# =================================================================
# GitHub API (Free) - Get from: https://github.com/settings/tokens
# Permissions needed: public_repo, read:user
GITHUB_ACCESS_TOKEN="your_github_personal_access_token_here"

# Reddit API (Free) - Get from: https://www.reddit.com/prefs/apps
# Create a "script" application type
REDDIT_CLIENT_ID="your_reddit_client_id_here"
REDDIT_CLIENT_SECRET="your_reddit_client_secret_here"

# =================================================================
# OPTIONAL AI API KEYS - Enhanced Features
# =================================================================
# OpenAI API - Get from: https://platform.openai.com/api-keys
# Used for: Advanced opportunity analysis, text generation
# Cost: Pay-per-use ($0.0015-0.02 per 1K tokens)
OPENAI_API_KEY="your_openai_api_key_here"

# Google Gemini API - Get from: https://makersuite.google.com/app/apikey
# Used for: Alternative AI model for analysis
# Cost: Free tier available
GEMINI_API_KEY="your_google_gemini_api_key_here"

# Anthropic Claude API - Get from: https://console.anthropic.com/
# Used for: Advanced reasoning and analysis
# Cost: Pay-per-use
ANTHROPIC_API_KEY="your_anthropic_api_key_here"

# Cohere API - Get from: https://dashboard.cohere.ai/api-keys
# Used for: Text embeddings and classification
# Cost: Free tier available
COHERE_API_KEY="your_cohere_api_key_here"

# =================================================================
# ADDITIONAL DATA SOURCE APIs (OPTIONAL)
# =================================================================
# Product Hunt API - Get from: https://www.producthunt.com/v2/oauth/applications
# Used for: Trending product data
PRODUCTHUNT_ACCESS_TOKEN="your_producthunt_access_token_here"

# =================================================================
# SYSTEM CONFIGURATION
# =================================================================
# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL="INFO"  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# =================================================================
# ADVANCED FEATURES (OPTIONAL)
# =================================================================
# Vector Database (Pinecone) - For semantic search
# Get from: https://www.pinecone.io/
PINECONE_API_KEY="your_pinecone_api_key_here"
PINECONE_ENVIRONMENT="us-west1-gcp"
PINECONE_INDEX_NAME="ai-opportunities"

# Event Bus Configuration
EVENT_BUS_TYPE="redis"  # Options: redis, kafka
ENABLE_EVENT_HANDLERS=true
ENABLED_EVENT_HANDLERS="all"

# Monitoring & Observability
ENABLE_METRICS=true
ENABLE_TRACING=false
JAEGER_ENDPOINT=""
OTLP_ENDPOINT=""

# =================================================================
# PRODUCTION SETTINGS (Only for production deployments)
# =================================================================
# Uncomment and configure for production:

# ENVIRONMENT="production"
# DEBUG=false
# SECRET_KEY="your-super-secure-production-secret-key-minimum-32-characters"
# DATABASE_URL="postgresql://user:password@prod-db:5432/ai_opportunity_browser"
# REDIS_URL="redis://prod-redis:6379/0"
# ALLOWED_ORIGINS=["https://yourdomain.com"]
# ALLOWED_HOSTS=["yourdomain.com"]